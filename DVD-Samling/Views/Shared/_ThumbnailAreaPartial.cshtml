@model IEnumerable<MovieItem>


@if(Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Genre.Name.Replace(" ",string.Empty) movie-shop">
        <div class="row">
            <h3 class="text-success">@Model.FirstOrDefault().Genre.Name</h3>
        </div>

        @foreach(var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="99%" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:24px; color:mediumblue">@item.Name</label>
                                @if (item.Agelimit == "0")
                                {
                                    <img srcset="/images/Tilladt_for_all.png" title="All" />
                                }
                                @if (item.Agelimit == "1")
                                {
                                    <img srcset="/images/Frarådes_for_børnunder_7.png" title="Age7" />
                                }
                                @if (item.Agelimit == "2")
                                {
                                    <img srcset="/images/Tilladt_fra_11_år.png" title="Age11" />
                                }
                                @if (item.Agelimit == "3")
                                {
                                    <img srcset="/images/Tilladt_fra_15_år.png" title="Age15" />
                                }
                            </div>

                        </div>

                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-12 align-bottom text-left" style="color:mediumblue">
                            <p>Undertexter: @item.Subtitels</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Detajler</a>
                        </div>
                    </div>
                    </div>
                </div>
        }
        <div class="p-4"></div>
    </div>
}