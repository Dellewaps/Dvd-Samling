@model IEnumerable<MovieItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if(Model.Count() > 0)
{
    <div class="col-12">
        <div class="row">
            <h3 class="text-success">@Model.FirstOrDefault().Genre.Name</h3>
        </div>

        @foreach(var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="99%" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-3 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px; color:mediumblue">@item.Name</label>
                                @if (item.Agelimit == "1")
                                {
                                    <img srcset="/images/Tilladt_for_all.gif" title="All" />
                                }
                                @if (item.Agelimit == "2")
                                {
                                    <img srcset="/images/Frarådes_for_børnunder_7.jpg" title="Age7" />
                                }
                                @if (item.Agelimit == "3")
                                {
                                    <img srcset="/images/Tilladt_fra_11_år.png" title="All" />
                                }
                                @if (item.Agelimit == "4")
                                {
                                    <img srcset="/images/Tilladt_fra_15_år.png" title="All" />
                                }
                            </div>
                            <div class="col-4">

                            </div>
                        </div>
                    </div>
                    </div>
                </div>
        }
    </div>
}