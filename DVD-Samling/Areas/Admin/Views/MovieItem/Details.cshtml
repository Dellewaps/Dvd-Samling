@model DVD_Samling.Models.ViewModels.MovieItemViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Film Detaljer</h2>
<br />
    <div class="bordoer backgroundWhite row">
        <div class="col-8">
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MovieItem.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MovieItem.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MovieItem.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.MovieItem.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MovieItem.Subtitels" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MovieItem.Subtitels" class="form-control" />
                    </div>
                </div>                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MovieItem.GenreId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MovieItem.Genre.Name" class="form-control"></input>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MovieItem.Agelimit" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.MovieItem.Agelimit" asp-items="Html.GetEnumSelectList<MovieItem.EAge>()" class="form-control"></select>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.MovieItem.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DetailsAndBackToListButton" model="Model.MovieItem.Id" />
            </div>
        </div>


    </div>

